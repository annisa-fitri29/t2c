<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".konfirmasi.KonfirmasiInfoFragment">

    <ScrollView
        android:id="@+id/info_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/info_location_line"
                android:layout_width="wrap_content"
                android:layout_height="6dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/grey_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/info_locationtxt" />

            <ImageView
                android:id="@+id/info_calendar_line"
                android:layout_width="wrap_content"
                android:layout_height="6dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/grey_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/info_calendartxt" />

            <ImageView
                android:id="@+id/info_clock_line"
                android:layout_width="wrap_content"
                android:layout_height="6dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/grey_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/info_clock_ic" />

            <ImageView
                android:id="@+id/info_penjualanlist_line"
                android:layout_width="wrap_content"
                android:layout_height="6dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/grey_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/info_penjualanlisttxt" />

            <ImageView
                android:id="@+id/info_penjualanlist_line2"
                android:layout_width="wrap_content"
                android:layout_height="6dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/grey_line"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/info_penjualanlisttxt2" />

            <TextView
                android:id="@+id/informasi_penjemputantxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Informasi Penjemputan"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/info_konfirmasitxt" />

            <TextView
                android:id="@+id/informasi_penjualantxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Informasi Penjualan"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/info_clock_line" />

            <TextView
                android:id="@+id/info_konfirmasitxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Konfirmasi"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/info_phone_ic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/phone_icon"
                app:layout_constraintStart_toStartOf="@+id/informasi_penjemputantxt"
                app:layout_constraintTop_toBottomOf="@+id/informasi_penjemputantxt" />

            <TextView
                android:id="@+id/info_phone_numbertxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/poppins"
                android:text="082188830680"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/info_phone_ic"
                app:layout_constraintStart_toEndOf="@+id/info_phone_ic"
                app:layout_constraintTop_toTopOf="@+id/info_phone_ic" />

            <ImageView
                android:id="@+id/info_phone_line"
                android:layout_width="wrap_content"
                android:layout_height="6dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/grey_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/info_phone_ic" />

            <ImageView
                android:id="@+id/info_location_ic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/location_icon"
                app:layout_constraintStart_toStartOf="@+id/informasi_penjemputantxt"
                app:layout_constraintTop_toBottomOf="@+id/info_phone_line" />

            <TextView
                android:id="@+id/info_locationtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="35dp"
                android:fontFamily="@font/poppins"
                android:text="Jl. Gunung Bawakaraeng, Penjualan Honda Makassar Indah, Makassar"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/info_phone_line" />

            <ImageView
                android:id="@+id/info_calendar_ic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/calendar_icon"
                app:layout_constraintStart_toStartOf="@+id/informasi_penjemputantxt"
                app:layout_constraintTop_toBottomOf="@+id/info_location_line" />

            <TextView
                android:id="@+id/info_calendartxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="21 Juni 2022"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/info_calendar_ic"
                app:layout_constraintTop_toTopOf="@+id/info_calendar_ic" />

            <ImageView
                android:id="@+id/info_clock_ic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/clock_icon"
                app:layout_constraintStart_toStartOf="@+id/informasi_penjemputantxt"
                app:layout_constraintTop_toBottomOf="@+id/info_calendar_line" />

            <TextView
                android:id="@+id/info_clocktxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/poppins"
                android:text="08.00 - 12:00"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/info_clock_ic"
                app:layout_constraintTop_toTopOf="@+id/info_clock_ic" />

            <TextView
                android:id="@+id/info_penjualanlisttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins"
                android:text="Botol Kertas 5 Kg"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/informasi_penjualantxt"
                app:layout_constraintTop_toBottomOf="@+id/informasi_penjualantxt" />

            <TextView
                android:id="@+id/info_penjualanlisttxt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins"
                android:text="Plastik 10 Kg"
                android:textSize="16sp"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="@+id/informasi_penjualantxt"
                app:layout_constraintTop_toBottomOf="@+id/info_penjualanlist_line" />

            <TextView
                android:id="@+id/info_hargalisttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Rp.7.500"
                android:textColor="@color/greentheme"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/info_penjualanlist_line"
                app:layout_constraintTop_toTopOf="@+id/info_penjualanlisttxt" />

            <TextView
                android:id="@+id/info_hargalisttxt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Rp.20.000"
                android:textColor="@color/greentheme"
                android:textSize="16sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/info_penjualanlist_line2"
                app:layout_constraintEnd_toEndOf="@+id/info_penjualanlist_line2" />

            <TextView
                android:id="@+id/info_estimasitxt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Rp.8000 "
                android:textColor="@color/greentheme"
                android:textSize="16sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/info_penjualanlist_line2"
                app:layout_constraintEnd_toStartOf="@+id/textView11" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins"
                android:text="sd "
                android:textSize="16sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/info_penjualanlist_line2"
                app:layout_constraintEnd_toStartOf="@+id/info_hargalisttxt3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/info_konfirmbtn"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/login_greenbtn"
                android:fontFamily="@font/poppins_medium"
                android:text="Konfirmasi"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/ki_space"
                app:layout_constraintTop_toBottomOf="@+id/info_penjualanlist_line2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/info_batalbtn"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/delete_btn"
                android:fontFamily="@font/poppins_medium"
                android:text="Batal"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:layout_constraintEnd_toStartOf="@+id/ki_space"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/info_penjualanlist_line2" />

            <TextView
                android:id="@+id/ki_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/info_penjualanlist_line2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>