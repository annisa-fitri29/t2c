<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pengepul.DijemputPengepulFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dijemputPengepulDikemasbtn"
        android:layout_width="95dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/login_greenbtn"
        android:fontFamily="@font/poppins_bold"
        android:text="Dikemas"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/dijemputPengepulSelesaibtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dijemputPengepulPenjemputanstxt"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dijemputPengepulSelesaibtn"
        android:layout_width="95dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/grey_btn"
        android:fontFamily="@font/poppins"
        android:text="Selesai"
        android:textAllCaps="false"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dijemputPengepulPenjemputanstxt"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/dijemputPengepulPenjemputanstxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Penjualan Saya"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dijemputPengepulDibatalkanbtn"
        android:layout_width="95dp"
        android:layout_height="38dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/grey_btn"
        android:fontFamily="@font/poppins"
        android:text="Dibatalkan"
        android:textAllCaps="false"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dijemputPengepulSelesaibtn"
        app:layout_constraintTop_toBottomOf="@+id/dijemputPengepulPenjemputanstxt"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dijemputPenyetorRecyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dijemputPengepulDikemasbtn" />

</androidx.constraintlayout.widget.ConstraintLayout>