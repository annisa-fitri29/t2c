            app:layout_constraintTop_toTopOf="@+id/TP_iconBotolKaca"
            tools:ignore="TouchTargetSizeCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/TP_pilihBotolKacaBTN2"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/greenbtn_stroke"
            android:fontFamily="@font/poppins_bold"
            android:text="DIPILIH"
            android:textAllCaps="false"
            android:textColor="@color/greentheme"
            android:textSize="17sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/TP_iconBotolKaca"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/TP_iconBotolKaca"
            tools:ignore="TouchTargetSizeCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/TP_pilihElektronikBTN"
