            android:layout_height="35dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/login_greenbtn"
            android:fontFamily="@font/poppins_medium"
            android:text="Pilih"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/TP_iconElektronik"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/TP_iconElektronik"
            tools:ignore="TouchTargetSizeCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/TP_pilihElektronikBTN2"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/greenbtn_stroke"
            android:fontFamily="@font/poppins_bold"
            android:text="DIPILIH"
            android:textAllCaps="false"
            android:textColor="@color/greentheme"
