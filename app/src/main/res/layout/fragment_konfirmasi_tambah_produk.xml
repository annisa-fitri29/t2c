<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tambahproduk.KonfirmasiTambahProdukFragment">

    <ScrollView
        android:id="@+id/tambahProduk_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/tambahProduk_location_line"
                android:layout_width="wrap_content"
                android:layout_height="6dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/grey_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tambahProduk_locationtxt" />

            <ImageView
                android:id="@+id/tambahProduk_penjualanlist_line"
                android:layout_width="wrap_content"
                android:layout_height="6dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/grey_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tambahProduk_penjualanlisttxt" />

            <TextView
                android:id="@+id/tambahProduk_penjemputantxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Informasi Penjemputan"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tambahProduk_konfirmasitxt" />

            <TextView
                android:id="@+id/tambahProduk_penjualantxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Informasi Penjualan"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tambahProduk_location_line" />

            <TextView
                android:id="@+id/tambahProduk_konfirmasitxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Konfirmasi"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/tambahProduk_phone_ic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/phone_icon"
                app:layout_constraintStart_toStartOf="@+id/tambahProduk_penjemputantxt"
                app:layout_constraintTop_toBottomOf="@+id/tambahProduk_penjemputantxt" />

            <TextView
                android:id="@+id/tambahProduk_phone_numbertxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/poppins"
                android:text="082188830680"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/tambahProduk_phone_ic"
                app:layout_constraintStart_toEndOf="@+id/tambahProduk_phone_ic"
                app:layout_constraintTop_toTopOf="@+id/tambahProduk_phone_ic" />

            <ImageView
                android:id="@+id/tambahProduk_phone_line"
                android:layout_width="wrap_content"
                android:layout_height="6dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/grey_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tambahProduk_phone_ic" />

            <ImageView
                android:id="@+id/tambahProduk_location_ic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/location_icon"
                app:layout_constraintStart_toStartOf="@+id/tambahProduk_penjemputantxt"
                app:layout_constraintTop_toBottomOf="@+id/tambahProduk_phone_line" />

            <TextView
                android:id="@+id/tambahProduk_locationtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="35dp"
                android:fontFamily="@font/poppins"
                android:text="Jl. Gunung Bawakaraeng, Penjualan Honda Makassar Indah, Makassar"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tambahProduk_phone_line" />

            <TextView
                android:id="@+id/tambahProduk_penjualanlisttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins"
                android:text="Botol Kertas 5 Kg"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/tambahProduk_penjualantxt"
                app:layout_constraintTop_toBottomOf="@+id/tambahProduk_penjualantxt" />

            <TextView
                android:id="@+id/tambahProduk_hargalisttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Rp.7.500"
                android:textColor="@color/greentheme"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/tambahProduk_penjualanlisttxt"
                app:layout_constraintEnd_toEndOf="@+id/tambahProduk_penjualanlist_line"
                app:layout_constraintTop_toTopOf="@+id/tambahProduk_penjualanlisttxt" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tambahProduk_konfirmbtn"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/login_greenbtn"
                android:fontFamily="@font/poppins_medium"
                android:text="Konfirmasi"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/ki_space"
                app:layout_constraintTop_toBottomOf="@+id/tambahProduk_penjualanlist_line" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tambahProduk_batalbtn"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/delete_btn"
                android:fontFamily="@font/poppins_medium"
                android:text="Batal"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:layout_constraintEnd_toStartOf="@+id/ki_space"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tambahProduk_penjualanlist_line" />

            <TextView
                android:id="@+id/ki_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tambahProduk_penjualanlist_line" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>